" Options {{{1
set runtimepath=~/.vimperator
set titlestring="Mozilla Firefox"
set messages=100
set verbose=1
set defsearch=google
set toolbars=noaddons,nobookmarks,nomenu,nonavigation,tabs
set complete=slS
set history=1000
set newtab=all
set popups=tab
set nohlsearch
set ignorecase
set incsearch
set smartcase
set focuscontent
" ビープ音無効化
set visualbell
" 検索結果を強調表示
set hlsearch
" ヒントに使うキー設定
set hintchars=HJKLASDFGYUIOPQWERTNMZXCVB
hi Hint z-index:5000; font-size:14px; color:white; background-color:red; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 2px 0px 2px; position:absolute; font-family: Menlo, Consolas, Monaco, monospace; text-transform: uppercase;

" Key mapping
" タブ切り替え
map h <C-n>
map l <C-p>
inoremap <C-n> <C-TAB>
inoremap <C-p> <C-S-TAB>

" タブオープン
map <C-t> :tabopen<CR>
" タブクローズ
map <C-w> :tabclose<CR>

" j, k を10倍に
map j 10<C-e>
map k 10<C-y>
" J, K もパワーアップ
map J 30<C-e>
map K 30<C-y>

" .vimperatorrcを再読み込み
map ,s :source ~/.vimperatorrc<CR>
" 再起動
map ,r :restart<CR>
" Stop loading
map ,c :stop<CR>

" Quick bookmark
qmark c http://www.google.com/calendar/render
qmark d http://d.hatena.ne.jp/mekanical/
qmark e http://www.alc.co.jp/
qmark f http://www.google.co.jp/reader/view/?tab=my#overview-page
qmark g http://mail.google.com/
qmark i http://ieeexplore.ieee.org/Xplore/guesthome.jsp?reload=true
qmark l http://www.database.ritsumei.ac.jp/subjgw/
qmark m http://maedalab.g.hatena.ne.jp/mekanical/
qmark n http://www.evernote.com/about/intl/jp/
qmark r http://webmail.ritsumei.ac.jp/
qmark s http://sns.career-aid.com/
qmark t http://k-kim.tumblr.com/
qmark w http://www35.atwiki.jp/mekanical/
qmark y http://honyaku.yahoo.co.jp/


