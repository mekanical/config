" タブ切り替え
"map <C-n> <C-TAB>
"map <C-p> <C-S-TAB>
map h <C-n>
map l <C-p>
inoremap <C-n> <C-TAB>
inoremap <C-p> <C-S-TAB>

" タブオープン
map <C-t> :tabopen<CR>
" タブクローズ
map <C-d> :tabclose<CR>

" j, k を10倍に
map j 10<C-e>
map k 10<C-y>
" J, K もパワーアップ
map J 30<C-e>
map K 30<C-y>

" .vimperatorrcを再読み込み
map ,s :source ~/.vimperatorrc<CR>
" 再起動
map ,r :restart<CR>
" Stop loading
map ,c :stop<CR>

