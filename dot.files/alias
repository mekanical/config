case "${OSTYPE}" in
# Mac(Unix)
darwin*)
  alias cemacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
  alias gemacs="open -n /Applications/Emacs.app"
  alias emacs="open -a Emacs"
  alias o="open"
  alias tmvim="mvim --remote-tab"
  alias synergy="/usr/local/bin/synergys"
  alias xampp="sudo /Applications/XAMPP/xamppfiles/xampp start"
  alias slock="open '/System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app'"
  alias perl="/usr/local/ActivePerl-5.12/bin/perl"
  ;;
# Linux
linux*)
  alias matlab="matlab &"
  alias open="nautilus"
  alias o="open"
  alias tera="cd /mnt/tera/7th/sugimoto"
  ;;
esac

